<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView android:text="Hello World!" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/androidocean"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/imageView" />


    <TextView
        android:text="WTA.ORG"
        android:id="@+id/place_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="bold"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/darker_gray"
        android:layout_toRightOf="@+id/imageView"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Talapus and Olallie Lakes"
        android:textSize="30sp"
        android:fontFamily="bold"
        android:id="@+id/textView"
        android:paddingLeft="5dp"
        android:layout_below="@+id/place_title"
        android:layout_toRightOf="@+id/imageView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day Hike"
        android:textSize="17sp"
        android:paddingLeft="5dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6.2 miles roundtrip"
        android:textSize="17sp"
        android:paddingLeft="5dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1220ft gain(highest point 3780ft)"
        android:textSize="17sp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/07/2015"
        android:textSize="17sp"
        android:paddingRight="5dp"
        android:id="@+id/textView6"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:src="@drawable/"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:paddingTop="5dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/textView5"
        />

    <TextView
        android:text="WTA.ORG"
        android:id="@+id/place_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="bold"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/darker_gray"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_below="@+id/textView5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/10/2015"
        android:textSize="17sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:id="@+id/textView7"
        android:layout_="@+id/textView8"
        android:layout_above="@+id/textView8"
        android:layout_top="@+id/place_title2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Granite Mountain"
        android:textSize="30sp"
        android:fontFamily="bold"
        android:id="@+id/textView8"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/place_title2"
        android:layout_toRightOf="@+id/imageView2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day Hike"
        android:textSize="17sp"
        android:paddingLeft="5dp"
        android:id="@+id/textview9"
        android:layout_below="@+id/textView8"
        android:layout_toRightOf="@+id/imageView2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.6 miles roundtrip"
        android:textSize="17sp"
        android:paddingLeft="5dp"
        android:id="@+id/textView10"
        android:layout_below="@+id/textview9"
        android:layout_toRightOf="@+id/imageView2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3800ft gain(highest point 5629ft) "
        android:textSize="17sp"
        android:paddingLeft="5dp"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_toRightOf="@+id/imageView2"
        />


</RelativeLayout>
